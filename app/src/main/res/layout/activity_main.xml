<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitulo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lytLinear1"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitulo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Câmara Oculta" />

                <ImageView
                    android:id="@+id/imgFoto1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img" />

                <TextView
                    android:id="@+id/txtDescricao1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Câmara Oculta é um restaurante temático inspirado no universo de Harry Potter, com decoração que remete aos elementos mágicos da saga. O cardápio criativo traz pratos e bebidas com nomes de feitiços e personagens, oferecendo uma experiência imersiva para fãs de todas as idades." />

                <Button
                    android:id="@+id/btnMaisRestaurante1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saiba mais!" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/lytLinear2"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitulo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Outbak Shopping Iguatemi" />

                <ImageView
                    android:id="@+id/imgRestaurante2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img_2" />

                <TextView
                    android:id="@+id/imgRestauranteDescricao2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No Outback Steakhouse, proporcionamos uma experiência única com pratos saborosos, como carnes suculentas e sobremesas irresistíveis, preparados com ingredientes frescos. Nosso atendimento caloroso e o ambiente acolhedor, além de drinques especiais no bar, tornam cada visita especial. Venha viver o #MomentoOutback!" />

                <Button
                    android:id="@+id/btnMaisRestaurante2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saiba mais!" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/lytLinear3"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitulo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Johnny Rockets" />

                <ImageView
                    android:id="@+id/imgRestaurante3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/img_4" />

                <TextView
                    android:id="@+id/txtDescricao3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Johnny Rockets é uma rede de restaurantes inspirada nas lanchonetes americanas dos anos 50, oferecendo hambúrgueres artesanais, batatas fritas crocantes e milkshakes clássicos. Com um ambiente retrô, música animada e um atendimento acolhedor, a marca proporciona uma experiência divertida e nostálgica, ideal para quem busca sabor e descontração.       " />

                <Button
                    android:id="@+id/btnMaisRestaurante3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saiba mais!" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Guia Culinário de Sorocaba"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>